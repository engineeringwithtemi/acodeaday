# =============================================================================
# acodeaday - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# =============================================================================
# Database (Supabase PostgreSQL)
# =============================================================================
# Get this from: supabase status (for local) or Supabase dashboard (for hosted)
# Format: postgresql+asyncpg://postgres:password@host:port/postgres
# Local Supabase example:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:54322/postgres

# =============================================================================
# Supabase Authentication
# =============================================================================
# Get these from 'supabase status' after running 'supabase start'
SUPABASE_URL=http://127.0.0.1:54321
# Default local Supabase anon key (from supabase demo)
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0
# Default local Supabase JWT secret (from supabase demo)
SUPABASE_JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long

# =============================================================================
# Judge0 Code Execution
# =============================================================================
# URL of your Judge0 CE instance
# Default assumes Judge0 running via docker-compose on port 2358
JUDGE0_URL=http://localhost:2358

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables SQL query logging, verbose errors)
DEBUG=true

# Project metadata
PROJECT_NAME=acodeaday
VERSION=0.1.0

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file or stdout
LOG_TO_FILE=true

# Log file path (relative to backend/)
LOG_FILE_PATH=logs/acodeaday.log

# JSON logging (useful for production)
LOG_JSON=false

# =============================================================================
# Frontend Configuration
# =============================================================================
# Backend API URL for the frontend (used by Vite with VITE_ prefix)
VITE_API_URL=http://localhost:8000

# Supabase configuration for frontend (used by Vite with VITE_ prefix)
# These should match the SUPABASE_URL and SUPABASE_KEY values above
VITE_SUPABASE_URL=http://127.0.0.1:54321
VITE_SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0

