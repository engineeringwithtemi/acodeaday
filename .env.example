# =============================================================================
# acodeaday - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# =============================================================================
# Database (Supabase PostgreSQL)
# =============================================================================
# Get this from: supabase status (for local) or Supabase dashboard (for hosted)
# Format: postgresql+asyncpg://postgres:password@host:port/postgres
# Local Supabase example:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:54322/postgres

# =============================================================================
# Authentication (HTTP Basic Auth)
# =============================================================================
# Simple username/password authentication
# Override these to change from defaults
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme

# =============================================================================
# Judge0 Code Execution
# =============================================================================
# URL of your Judge0 CE instance
# Default assumes Judge0 running via docker-compose on port 2358
JUDGE0_URL=http://localhost:2358

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables SQL query logging, verbose errors)
DEBUG=true

# Project metadata
PROJECT_NAME=acodeaday
VERSION=0.1.0

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file or stdout
LOG_TO_FILE=true

# Log file path (relative to backend/)
LOG_FILE_PATH=logs/acodeaday.log

# JSON logging (useful for production)
LOG_JSON=false

# =============================================================================
# Frontend Configuration (Optional - for CORS)
# =============================================================================
# Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
